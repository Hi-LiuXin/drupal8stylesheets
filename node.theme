//add stylesheets to a node

function mytheme_preprocess_node(&$variables) {
  $node = \Drupal::routeMatch()->getParameter('node');
  if ($node) {
    if ($node->id() == 3) {
      $variables['#attached']['library'][] = 'mytheme/myfont';
    }
  }
}